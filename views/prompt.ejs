<!DOCTYPE html>
<html lang="en">
  <!-- Include Add the needed head tags and links -->
  <%- include("partials/head", {title:"Confirmation", description:""})%>
  <body>

      <!-- User Profile data -->
    <div class="container heading-page" style="min-height: 100vh;">
      <div class="row justify-content-center align-items-center mt-5">

        <div class="col-10 alert alert-info">
          <h2 class="m-4"><%= message %></h2>
          <div class="row justify-content-around">
            <a href="<%= accept.href %>" class="col-5 btn btn-danger"><%= accept.name %></a>
            <a href="<%= reject.href %>" class="col-5 btn btn-info"><%= reject.name %></a>
          </div>
        </div>

      </div>
    </div>


  </body>
</html>