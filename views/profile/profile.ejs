<!DOCTYPE html>
<html lang="en">


<!-- Include Add the needed head tags and links -->
<%- include("partials/head", {name:user.firstName+" "+user.lastName})%>

<body>

  <!-- Include Navbar -->
  <%- include("partials/nav")%>

  <!-- User Profile data -->
  <div class="container grid-system heading-page">
    <div class="row blog-posts">
      <div class="col-lg-8">
        <div class="all-blog-posts">
          <div class="row">
            <div class="col-lg-12">
              <div class="blog-post">
                <div class="blog-thumb">
                  <img src="/files/user/<%= user.profile_photo %>" alt="">
                </div>
                <div class="row down-content p-2 justify-content-around">

                  <h4 class="col-12 text-center"><span>Admin </span><%= user.firstName %> <%= user.lastName %></h4>

                  <table class="col-10 col-md-5 profile-demo">
                    <tr>
                      <th colspan="2">
                        <h4 class="color-a">Demogaphic Data:</h4>
                      </th>
                    </tr>
                    <tr>
                      <td>Uearname</td>
                      <td><%= user.username %></td>
                    </tr>
                    <tr>
                      <td>Email</td>
                      <td><%= user.email %></td>
                    </tr>
                    <tr>
                      <td>Phone</td>
                      <td><%= user.phone %></td>
                    </tr>
                    <tr>
                      <td>Address</td>
                      <td><%= user.address %></td>
                    </tr>
                    <tr>
                      <td>Date of birth</td>
                      <td><%= user.dateOfBirth.toDateString() %></td>
                    </tr>
                  </table>
                  <table class="col-10 col-md-5 profile-demo">
                    <tr>
                      <th colspan="2">
                        <h4 class="color-a">History:</h4>
                      </th>
                    </tr>
                    <tr>
                      <td>Dashboard</td>
                      <td>200</td>
                    </tr>
                    <tr>
                      <td>Logged</td>
                      <td>100</td>
                    </tr>
                    <tr>
                      <td>Posted</td>
                      <td>14</td>
                    </tr>
                    <tr>
                      <td>Views</td>
                      <td>124</td>
                    </tr>
                    <tr>
                      <td>Replied</td>
                      <td>5</td>
                    </tr>

                  </table>
                  <div class="col-12 post-options ml-5 mt-4 mb-2">
                    <div class="row">

                      <div class="col-6">
                        <ul class="post-tags">
                          <li><i class="fa fa-edit"></i></li>
                          <li><a href="/profile/edit_profile">Edit your profile</a></li>
                        </ul>
                      </div>

                    </div>
                  </div>
                </div>
              </div>
            </div>


          </div>
        </div>
      </div>
      <div class="col-lg-4">

        <div class="sidebar">
          <div class="row">

            <div class="col-lg-12">
              <div class="sidebar-item mt-0 categories">
                <div class="sidebar-heading">
                  <h2>Options</h2>
                </div>
                <div class="content">
                  <ul>
                    <li><a href="/profile/posts">- POSTS</a></li>
                    <li><a href="/profile/users">- USERS</a></li>
                    <li><a href="/profile/website">- WEBSITE</a></li>
                  </ul>
                </div>
              </div>
            </div>
          </div>



        </div>
      </div>
    </div>
  </div>
  
  <!-- User Profile data -->




  <!-- Include footer -->
  <%- include("partials/footer") %>

  <!-- Include Add the needed scripts -->
  <%- include("partials/js_links") %>




</body>

</html>